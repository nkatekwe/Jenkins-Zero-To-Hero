pipeline {
    agent {
        docker { 
            image 'node:16-alpine' 
            label 'docker'  // Optional: specify agent label
        }
    }
    stages {
        stage('Test') {
            steps {
                script {
                    echo "Running in Docker container..."
                    sh '''
                        echo "Node version:"
                        node --version
                        echo "NPM version:"
                        npm --version
                    '''
                }
            }
        }
    }
    post {
        always {
            echo "Test stage completed"
        }
    }
}
